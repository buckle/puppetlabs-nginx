  location <%= location %> {
    <% if has_variable?("www_root") then %>
    root  <%= www_root %>;
    <% end %>

    <% if has_variable?("index_files") then %>
    index <% index_files.each do |i| %> <%= i %> <% end %>;
    <% end %>

    <% if has_variable?("try_files") then %>
    try_files <% try_files.each do |try| -%> <%= try %> <% end -%>;
    <% end %> 
  }